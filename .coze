[project]
entrypoint = "app.py"
requires = ["python-3.11"]

[dev]
build = ["pip", "install", "-r", "requirements.txt"]
run = ["python", "app.py"]
deps = ["git"]

[deploy]
build = ["pip", "install", "-r", "requirements.txt"]
run = ["bash", "-c", "FLASK_ENV=production gunicorn -w 4 -b 0.0.0.0:5000 wsgi:app"]
deps = ["git"]
